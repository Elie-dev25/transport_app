package "Domaine - Trajets & Prestataires" {
class Trajet {
  - trajet_id : int
  - busudm_id : int
  - chauffeur_id : int
  - charge_id : int
  - prestataire_id : int
  - type_trajet : enum
  - date_heure_depart : datetime
  - point_depart : enum
  - nombre_places_occupees : int
  - point_arriver : varchar
  - motif : varchar
  + planifier() : void
  + demarrer() : void
  + terminer() : void
  + annuler(raison : String) : void
}

class Prestataire {
  - prestataire_id : int
  - nom_prestataire : varchar
  - telephone : varchar
  - localisation : varchar
  - email : varchar
  + proposerTrajet(trajet : Trajet) : void
  + accepterContrat() : void
}
}

